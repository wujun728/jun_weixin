
  <view class="container">
    <swiper class="swiper" indicator-active-color="{{indicatorActiveColor}}" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">
      <block  wx:for="{{adList}}" wx:key="key">
        <swiper-item>
          <image src="{{img_domain}}/{{item.img}}" class="slide-image" bindtap="goToAdvert" data-wpygotoadvert-a="{{item.miniproUrl}}"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="pos">
      <view class="search_read_only">
        <navigator class="search_content" open-type="navigate" url="/pages/search">
          <i class="iconfont icon-search"/>
          <view class="search_input">搜索商品</view>
        </navigator>
        <navigator class="message" url="/pages/messages">
          <i class="iconfont icon-message cfff"/>
          <view class="doc cfff">消息</view>
        </navigator>
      </view>
    </view>
    <view class="nav_list">
      <navigator open-type="navigate" url="/pages/sign_in">
        <image src="../images/icon_nav_01_new.png" class="nav_icon"/>
        <view class="nav_text">签到有礼</view>
      </navigator>
      <navigator open-type="navigate" url="/pages/top_list?code={{topicStickList[0].id}}">
        <image src="{{img_domain}}/{{topicStickList[0].icon}}" class="nav_icon"/>
        <view class="nav_text">{{topicStickList[0].title}}</view>
      </navigator>
      <navigator open-type="navigate" url="/pages/top_list?code={{topicStickList[1].id}}">
        <image src="{{img_domain}}/{{topicStickList[1].icon}}" class="nav_icon"/>
        <view class="nav_text">{{topicStickList[1].title}}</view>
      </navigator>
      <navigator open-type="navigate" url="/pages/top_list?code={{topicStickList[2].id}}">
        <image src="{{img_domain}}/{{topicStickList[2].icon}}" class="nav_icon"/>
        <view class="nav_text">{{topicStickList[2].title}}</view>
      </navigator>
    </view>
    <!--发现好商品模块-->
    
    <view class="bc">
        <!--<view class="discover">
            <view class="discover_title_doc">发现好商品</view>
        </view>-->
        <view class="discover_list">
            <navigator class="item" open-type="navigate"  wx:for="{{$discover$list}}" wx:key="item" url="/pages/home_detail?code={{item.id}}">
                <image class="discover_img" src="{{$discover$img_domain}}/{{item.img}}"/>
                <view class="info" wx:for="{{item.attrs}}" wx:key="item">
                    <view>{{item.attrName.attrName}}：</view><view wx:for="{{item.attrValList}}" wx:key="item">{{item.attrVal}} </view>
                </view>
            </navigator>
        </view>
    </view>

    <view class="recommend-title">商品推荐</view>
    
  <scroll-view scroll-y="true" class="swiper-item-box">
    <view class="shop_item">
      <navigator class="list"  wx:for="{{$shopGridList$list}}" wx:key="item" url="/pages/goods_detail?id={{item.id}}&priceId={{item.priceId}}&purchasetype={{$shopGridList$purchasetype}}&special={{$shopGridList$special}}">
        <view class="image_box">
          <image src="{{$shopGridList$img_domain}}/{{item.thumLogo}}"/>
        </view>
        <view class="goods">
          <view class="product_name" wx:if="{{$shopGridList$showTitle}}">{{item.name}}({{item.mealName}})</view>
          <view class="product_info">
            <view class="price">￥{{item.price}}</view>
            <view class="cost_price">￥{{item.marketPrice}}</view>
            <view class="sale_num">销量{{item.saleCount}}件</view>
          </view>
        </view>
      </navigator>
    </view>
  </scroll-view>

    <!--加载更多时动画-->
    
    <view class="loadMoreGif"  wx:if="{{$bottomLoadMore$show}}">
        <image src="../images/loadding.gif"/>
        <text>{{$bottomLoadMore$message}}</text>
    </view>

    <!--暂无数据显示-->
    
    <view class="empty-placeholder row-center"  wx:if="{{$placeholder$show}}">
        <image class="icon-xl" src="../images/empty.png"/>
        <view class="txt">{{$placeholder$message}}</view>
    </view>

    <!--弹屏  types:0 图片  1：领红包   show 是否显示  @close 关闭回调  @callback 点击图片回调 或确定回调-->
    
  <view  wx:if="{{$bombscreen$show}}">
    <view wx:if="{{$bombscreen$types===0}}">
      <view class="pop-alert-box">
        <image src="../images/icon_alert.png" class="icon_alert" catchtap="$bombscreen$callback"/>
        <i class="iconfont icon-close" catchtap="$bombscreen$close"/>
      </view>
    </view>
    <view wx:else>
      <view class="pop-alert-box dialog">
        <view class="alert-content-box">
          <view class="alert-content">
            <image src="../images/icon_alert.png" class="icon_alert_dialog"/>
            <view class="title">恭喜获得红包</view>
            <view class="title-doc">恭喜获得一张卡券，已发放至该账号</view>
          </view>
          <view class="btn_box">
            <view class="button type_red" catchtap="$bombscreen$callback">点击领取</view>
          </view>
        </view>
          <i class="iconfont icon-close" catchtap="$bombscreen$close"/>
      </view>
    </view>
    <view class="alert_mask" catchtap="$bombscreen$close"/>
  </view>

  </view>