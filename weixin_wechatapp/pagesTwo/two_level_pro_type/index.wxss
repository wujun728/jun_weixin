
/* 外卖模式的点单啊 */
.waimaiContainer{
  position: absolute;
  left: 0;
  right: 0; 
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
}
.typeName{
  height:40rpx;
  line-height:40rpx;
  box-sizing:border-box;
  width:100%;
  text-align:center;
  font-size:26rpx;
}
/*店铺顶部信息  */
.shop_top{
  height: 180rpx;
  background: #48b250;
  display: flex;
  flex-direction: row;
  padding:0 30rpx 0 30rpx;
  justify-content:flex-start;
  align-items: center;
}
.shop_top_name{
  font-size: 35rpx;
  color: #fff;
}
.shop_top_left{
  margin-right: 20rpx
}
.shop_top_img{
  width: 120rpx;
  height:120rpx;
  border-radius: 10rpx;
}
.shop_top_right{
  display: flex;
  flex-direction: column
}
.shop_top_decribe{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.decribe_dada{
  border: 1px solid #fff;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #fff;
  padding: 0 10rpx 0 10rpx;
  margin-right: 10rpx;
}
.decribe_base{
  font-size: 22rpx;
  color: #fff;
}
/* 左边的type */
.leftScrollType{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width:25%;
  background: #f4f4f4;
  display: flex;
  flex-direction: column;
  font-size: xx-small;
  color: #777;
  overflow: hidden;
}

.TypeItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #f4f4f4;
  padding: 30rpx 0;
  font-size: 26rpx;
}
.activeTypeItem{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  font-size: 28rpx;
  padding: 24rpx 0;
}
.TypeItem_iamge{
  width: 4em;
  height: 4em;
  margin-bottom: 10px;
}
.ToOrderView_container{
}
.ToOrderView{
  position: fixed;
  font-size: xx-small;
  left: 0;
  width: 8%;
  overflow: hidden;
  height: 5em;
  background: #c53f43;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-top-right-radius: 2.4em;
  border-bottom-right-radius: 2.4em;
}
.ToOrderView1{
  bottom: 6em;
}
.ToOrderView2{
  bottom: 1em;
}
.ToOrderView image{
  width: 2em;
  height: 2em;
}
.ToOrderView text{
  margin-left: 6px;
  margin-right: 1.4em;
  color: #fff;
  width: 12px;
}
/* 右边的商品 */
.RightProductContainer{
  position: absolute;
  padding: 10rpx 20rpx 20rpx 0;
  right: 0;
  top: 0;
  bottom: 0;
  width:72%;
  background: #fff;
  display: flex;
  flex-direction: column;
  font-size: small;
  overflow: scroll;
}

.productTypeTwoList{
  /* padding: 10px; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items:center;
  margin-top:20rpx;
  /* border-bottom: 1rpx solid #ddd; */
}
.productTypeTwoList > .productItemImage{
  width: 140rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}
.productTypeTwoItem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  font-size: 24rpx;
  color: #555;
  width: 31%;
  margin: 26rpx 1%;
}
.productTypeTwoItemImg{
  width:100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}
.productImg{
  width: 140rpx;
  height: 140rpx;
}
.productTypeTwoList >.productInfo{
  width: 75%;
}
.productInfo{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 20rpx;
}
.productInfo_name{
  font-size: 24rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.productInfo_decribe{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}
.small_decribe{
  font-size: 20rpx;
  color: #989898;
  margin-bottom: 5rpx;
}
.productInfo_promotionName{
  background: #f7515f;
  border-radius: 5rpx;
  color: #fff;
  font-size: 20rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}
.productInfo_Price{
  color: red;
  font-size: 24rpx;
  width: 100%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}
.price{
  font-size: 32rpx !important;
  /* margin-right: 10rpx */
}
.tag_price{
  text-decoration:line-through;
  color: #999;
  font-size: 24rpx
}
.price_group{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.productInfo_Nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.productInfo_Nums > image{
  width:16rpx;
  height: 16rpx;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  padding: 12rpx;
}
