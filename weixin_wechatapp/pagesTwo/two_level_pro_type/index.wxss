  align-items: center;
  border-bottom: 1rpx solid #ddd;
}
.waimai_cart_item_info{
  width: 60%;
  font-size: x-small;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.waimai_cart_item_info_name{
  font-weight: bold;
}
.waimai_cart_item_info_price{
  margin-top: 10px;
  color: red;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.waimai_cart_item_info_price2{
  font-size: large !important;
}
.waimai_cart_item_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.waimai_cart_item_nums > image{
  width:12px;
  height: 12px;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  padding: 8px;
}
