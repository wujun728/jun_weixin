/* 小头头 */
.Tap_cart{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.Tap_cart > view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width: 30px;
  height: 15px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  line-height: 10px;
}
.Tap_cart .Tap_cart_v1{
  background: #c53f43;
  color: #fff;
  
}
.Tap_cart .Tap_cart_v2{
  background: #fff;
  color: #000;
 
}

.waimai_cart_item{
  padding: 10px;
  
  display: flex;
  flex-direction: row;
