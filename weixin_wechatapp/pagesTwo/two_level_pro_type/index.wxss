/* 下面的购物车 */
.bottomCartContainer{
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 12;
  width:100%;
  height: 3.6em;
  background: #c53f43;
  color: #fff;
  display: flex;
  flex-direction: row;
  font-size: small;
}
.sureButn{
  width: 30%;
  height: 100%;
  border-left: 1px solid #f1f1f1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cartInfo{
  width: 69%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.cartInfo > Price{
