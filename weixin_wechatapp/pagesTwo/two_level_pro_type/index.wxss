.choose_measureItem{
  color: red;
  font-size: 22rpx;
  border: 2rpx solid #ccc;
  padding: 6rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

/* 规格弹出卡片的 */
.measureItemsContainer{
  position: absolute;
  z-index: 12;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.measureItemsCard{
  width: 80%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 5px;
}

.cardHead{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1px solid #ddd;
}
.closeCard{
  position: absolute;
  right: 10px;
  top: 10px;
}
.cardHeadTip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cardHeadTip view{
  height: 10px;
  width: 10px;
  background: red;
  margin-left: 10px;
}
.cardHeadName{
  padding: 10px 25px;
  font-size: 32rpx;
}

.cardMid{
  width: 100%;
  padding: 10px 10px;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.cardMidName{
  color: #aaa;
  font-size: small;
  padding: 10px;
}
.cardMidGuigeContainer{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding:0px 10px 10px 10px;
}
.cardMidGuigeContainer view{
  margin-right: 15px;
  padding: 5px 10px;
  border-radius: 8px;
  color: #000;
  border: 1px solid #ddd;
  margin-bottom: 10px;
}
.active{
   border: 1px solid red !important;
}
.submitMeasure{
  width: 100%;
  height: 2.6em;
  background: red;
