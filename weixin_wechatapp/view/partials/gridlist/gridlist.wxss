.showTypeContainer{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
  padding-top: 6px;
  padding-bottom: 17px;
} 
.grid_cell{
  padding-top: 11px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.grid_cell_item{
  padding-top: 11px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  
}
.grid_cell image{
  width: 80rpx;
  height:80rpx;
}
.grid_cell view{
  margin-top: 4px;
  color: #666666;
  font-size: 12px;
  line-height: 17px;
}
.grid_cell button{
  margin-top: 4px;
  color: #666666;
  font-size: 12px;
  line-height: 17px;
}
