.pupu_product_list_two{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
}
.pupu_product_list_two_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  box-sizing: border-box;
  border: 1rpx solid #f5f5f5;
  padding: 30rpx 10rpx;
  position: relative;
}
.pupu_product_list_two_item_img{
  display: flex;
  align-items: center;
  width: 250rpx;
  height: 250rpx;
  margin-bottom: 10rpx;
}
.pupu_product_list_two_item_url{
  width: 250rpx;
  height: 250rpx;
}
.pupu_product_list_two_item_name{
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow: hidden;
  width: 80%;
  text-align:center;
}
.pupu_product_list_two_item_unit{
  font-size: 24rpx;
  color: #a3a3a3;
  margin-bottom: 10rpx;
}
.pupu_product_list_two_item_bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-top:20rpx;
  width: 100%
}
.pupu_product_list_two_item_price{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  color: #ff826e;
  font-size: 24rpx;
}
.pupu_product_list_two_item_true_price{
  font-size: 36rpx;
  line-height:36rpx;
}
.font_color{
  color: #a3a3a3;
  font-size:24rpx;
  margin-left:6rpx;
  display: flex;
  align-items: center;
}
.pupu_product_list_two_item_tagprice{
  text-decoration:line-through;
}

.pupu_product_list_two_item_cart{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 24rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 2rpx 6rpx;
}
.pupu_product_list_two_item_cart_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right:6rpx;
}
.pupu_product_list_two_item_cart_text{
  letter-spacing: 8rpx;
  font-size:22rpx;
}
.pupu_product_list_two_item_tag {
    display:flex;
    flex-direction:row;
    align-items:center;
    position:absolute;
    top:15rpx;
    left:50rpx;
    font-size:20rpx;
    background:#eb7aa4;
    padding:2rpx 6rpx;
    color:#fff;
}

